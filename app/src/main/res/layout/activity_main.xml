<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_background"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        app:layout_constraintEnd_toEndOf="@id/TextView"
        app:layout_constraintStart_toStartOf="@id/TextView"
        app:layout_constraintBottom_toTopOf="@id/TextView"
        android:src="@drawable/icsova"
        android:layout_width="100dp"
        android:layout_height="100dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/Button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="80sp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_icons8_facebook______"
        android:fontFamily="@font/acme"
        android:text="Login in with Facebook"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="35dp"
        app:layout_constraintBottom_toTopOf="@+id/Button_2"
        app:layout_constraintEnd_toEndOf="@id/button_5"
        app:layout_constraintStart_toStartOf="@id/button_5" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/Button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="28sp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/averia_libre_bold"
        android:text="Up with email"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="35dp"
        app:layout_constraintBottom_toTopOf="@id/button_5"
        app:layout_constraintEnd_toEndOf="@id/button_5"
        app:layout_constraintStart_toStartOf="@id/button_5" />


    <com.google.android.material.button.MaterialButton
        app:cornerRadius="36sp"
        android:layout_marginVertical="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/blue"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="GAME NOW"
        android:layout_width="360sp"
        android:layout_height="62sp"
        android:id="@+id/button_5"
        />


    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="150sp"
        app:layout_constraintEnd_toEndOf="@id/Button_3"
        app:layout_constraintStart_toStartOf="@id/Button_3"
        app:layout_constraintBottom_toTopOf="@id/Button_3"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="36sp"
        android:text="Trivia" />

    <TextView
        android:layout_marginVertical="20sp"
        app:layout_constraintStart_toStartOf="@id/Button_2"
        app:layout_constraintEnd_toEndOf="@id/Button_2"
        app:layout_constraintBottom_toTopOf="@+id/Button_2"
        android:textColor="@color/sery"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="OR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginVertical="35sp"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintEnd_toEndOf="@id/image"
        app:layout_constraintBottom_toTopOf="@id/image"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="LOG IN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>